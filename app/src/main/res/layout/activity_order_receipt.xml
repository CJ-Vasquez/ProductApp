<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background">

    <!-- Toolbar -->
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        app:elevation="0dp">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@android:color/transparent"
            app:title="@string/order_receipt_title"
            app:titleTextColor="@android:color/white"
            app:navigationIcon="@drawable/ic_arrow_back"
            app:navigationIconTint="@android:color/white" />

    </com.google.android.material.appbar.AppBarLayout>

    <!-- Contenido principal -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- Mensaje de éxito -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginBottom="32dp">

                <ImageView
                    android:id="@+id/ivSuccessIcon"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/ic_check_circle"
                    android:layout_marginBottom="16dp" />

                <TextView
                    android:id="@+id/tvSuccessMessage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="¡Pedido realizado con éxito!"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:textAlignment="center" />

            </LinearLayout>

            <!-- Card principal del recibo -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="20dp"
                app:cardElevation="12dp"
                android:layout_marginBottom="20dp"
                app:cardBackgroundColor="@android:color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <!-- Encabezado del recibo -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/order_receipt_title"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary_dark"
                        android:textAlignment="center"
                        android:layout_marginBottom="24dp" />

                    <!-- Información del pedido -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginBottom="20dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Información del Pedido"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="@color/pastel_blue"
                            android:layout_marginBottom="12dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="8dp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/order_number"
                                android:textSize="16sp"
                                android:textColor="@color/text_secondary_dark" />

                            <TextView
                                android:id="@+id/tvOrderNumber"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="ORD-001"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="@color/text_primary_dark" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="8dp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/order_date"
                                android:textSize="16sp"
                                android:textColor="@color/text_secondary_dark" />

                            <TextView
                                android:id="@+id/tvOrderDate"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="01/01/2024"
                                android:textSize="16sp"
                                android:textColor="@color/text_primary_dark" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/order_status"
                                android:textSize="16sp"
                                android:textColor="@color/text_secondary_dark" />

                            <TextView
                                android:id="@+id/tvOrderStatus"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Pendiente"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="@color/success_pastel" />

                        </LinearLayout>

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/text_secondary_dark"
                        android:alpha="0.2"
                        android:layout_marginBottom="20dp" />

                    <!-- Información del cliente -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginBottom="20dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/customer_details"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="@color/pastel_blue"
                            android:layout_marginBottom="12dp" />

                        <TextView
                            android:id="@+id/tvCustomerName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Cliente"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@color/text_primary_dark"
                            android:layout_marginBottom="4dp" />

                        <TextView
                            android:id="@+id/tvCustomerEmail"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="email@cliente.com"
                            android:textSize="14sp"
                            android:textColor="@color/text_secondary_dark"
                            android:layout_marginBottom="4dp" />

                        <TextView
                            android:id="@+id/tvCustomerPhone"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="+51 999 999 999"
                            android:textSize="14sp"
                            android:textColor="@color/text_secondary_dark" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/text_secondary_dark"
                        android:alpha="0.2"
                        android:layout_marginBottom="20dp" />

                    <!-- Información de envío -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginBottom="20dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/shipping_details"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="@color/pastel_blue"
                            android:layout_marginBottom="12dp" />

                        <TextView
                            android:id="@+id/tvShippingAddress"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Dirección de envío"
                            android:textSize="16sp"
                            android:textColor="@color/text_primary_dark" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/text_secondary_dark"
                        android:alpha="0.2"
                        android:layout_marginBottom="20dp" />

                    <!-- Información de pago -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginBottom="20dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/payment_details"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="@color/pastel_blue"
                            android:layout_marginBottom="12dp" />

                        <TextView
                            android:id="@+id/tvPaymentMethod"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Efectivo"
                            android:textSize="16sp"
                            android:textColor="@color/text_primary_dark" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="@color/text_secondary_dark"
                        android:alpha="0.3"
                        android:layout_marginBottom="20dp" />

                    <!-- Totales -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="8dp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/subtotal"
                                android:textSize="16sp"
                                android:textColor="@color/text_secondary_dark" />

                            <TextView
                                android:id="@+id/tvReceiptSubtotal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="$0.00"
                                android:textSize="16sp"
                                android:textColor="@color/text_primary_dark" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="12dp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/tax"
                                android:textSize="16sp"
                                android:textColor="@color/text_secondary_dark" />

                            <TextView
                                android:id="@+id/tvReceiptTax"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="$0.00"
                                android:textSize="16sp"
                                android:textColor="@color/text_primary_dark" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/total"
                                android:textSize="22sp"
                                android:textStyle="bold"
                                android:textColor="@color/text_primary_dark" />

                            <TextView
                                android:id="@+id/tvReceiptTotal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="$0.00"
                                android:textSize="22sp"
                                android:textStyle="bold"
                                android:textColor="@color/success_pastel" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Botones de acción -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnBackToHome"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    android:text="Volver al Inicio"
                    android:textSize="16sp"
                    android:textColor="@color/text_white"
                    app:icon="@drawable/ic_placeholder"
                    app:iconTint="@color/text_white"
                    app:cornerRadius="16dp"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    app:strokeColor="@color/text_white"
                    app:strokeWidth="2dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnNewOrder"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    android:text="Nueva Compra"
                    android:textSize="16sp"
                    android:textColor="@color/text_on_pastel"
                    app:icon="@drawable/ic_shopping_cart"
                    app:iconTint="@color/text_on_pastel"
                    app:cornerRadius="16dp"
                    style="@style/Widget.Material3.Button"
                    app:backgroundTint="@color/success_pastel" />

            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
